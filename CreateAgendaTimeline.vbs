	objAppointment_PROGRESS_STATUS.Subject = PROGRESS_STATUS_SUBJ_LINE

	objAppointment_PROGRESS_STATUS.Location = PROGRESS_STATUS_LOCATION
	objAppointment_PROGRESS_STATUS.ReminderMinutesBeforeStart = PROGRESS_STATUS_REMINDER
	objAppointment_PROGRESS_STATUS.ReminderSet = PROGRESS_STATUS_SET
	
	objAppointment_PROGRESS_STATUS.Body = Get_PROGRESS_STATUS_Body
	
	Set objRecurrence_PROGRESS_STATUS = objAppointment_PROGRESS_STATUS.GetRecurrencePattern
